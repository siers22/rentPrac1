<Window x:Class="rentPrac1.windows.Property.AddProperty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rentPrac1.windows.Property"
        mc:Ignorable="d"
        Title="AddProperty" Height="450" Width="800" KeyDown="Window_KeyDown">
    <Grid>
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="22,244,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click_1"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="201,244,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click"/>
        <Label Content="Имя" HorizontalAlignment="Left" Margin="22,27,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="nameInput" HorizontalAlignment="Left" Margin="169,36,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="204"/>
        <Label Content="Адрес" HorizontalAlignment="Left" Margin="18,74,0,0" VerticalAlignment="Top" FontSize="24"/>
        <TextBox x:Name="addresInput" HorizontalAlignment="Left" Margin="169,83,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="204"/>
        <Label Content="Цена за месяц" HorizontalAlignment="Left" Margin="18,128,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="priceInput" HorizontalAlignment="Left" Margin="169,137,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="204" PreviewTextInput="priceInput_PreviewTextInput"/>
        <ComboBox x:Name="typesInput" HorizontalAlignment="Left" Margin="169,186,0,0" VerticalAlignment="Top" Width="204" SelectedValuePath="Id" DisplayMemberPath="Name"/>
        <Label Content="Тип недвижимости" HorizontalAlignment="Left" Margin="18,181,0,0" VerticalAlignment="Top" FontSize="15"/>

    </Grid>
</Window>
