<Window x:Class="rentPrac1.windows.Clients.MainClientsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rentPrac1.windows.Clients"
        mc:Ignorable="d"
        Title="MainClientsWindow" Height="450" Width="800" MouseEnter="Window_MouseEnter">
    <Grid>
        <DataGrid x:Name="dataList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,90,0,0" SelectionChanged="dataList_SelectionChanged" AutoGeneratingColumn="OnAutoGeneratingColumn"/>
        <Button Content="Выход" HorizontalAlignment="Left" Margin="631,33,0,0" VerticalAlignment="Top" Width="135" Click="Button_Click"/>
        <Button Content="Добавить клиента" HorizontalAlignment="Left" Margin="22,33,0,0" VerticalAlignment="Top" Width="121" Click="Button_Click_1"/>
        <Label Content="Имя:" HorizontalAlignment="Left" Margin="178,33,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="nameinput" HorizontalAlignment="Left" Margin="219,37,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" PreviewTextInput="nameinput_PreviewTextInput"/>

    </Grid>
</Window>
