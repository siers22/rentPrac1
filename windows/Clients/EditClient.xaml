        mc:Ignorable="d"
        Title="EditClient" Height="350" Width="630" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
