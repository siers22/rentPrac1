<Window x:Class="rentPrac1.windows.Contracts.MainContractsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rentPrac1.windows.Contracts"
        mc:Ignorable="d"
        Title="MainContractsWindow" Height="550" Width="800">
    <Grid>
        <DataGrid x:Name="dataList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,168,0,0" SelectionChanged="dataList_SelectionChanged" AutoGeneratingColumn="OnAutoGeneratingColumn"/>
        <Button Content="Добавить контракт" HorizontalAlignment="Left" Margin="24,27,0,0" VerticalAlignment="Top" Width="131" Click="Button_Click"/>
        <Button Content="Выход" HorizontalAlignment="Left" Margin="698,32,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Label Content="Имя клиента" HorizontalAlignment="Left" Margin="24,66,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="clientNameInput" HorizontalAlignment="Left" Margin="188,70,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Название недвижимости" HorizontalAlignment="Left" Margin="24,97,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="propertyNameInput" HorizontalAlignment="Left" Margin="188,101,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Поиск" HorizontalAlignment="Left" Margin="362,69,0,0" VerticalAlignment="Top" Width="94" Click="Button_Click_2"/>
        <Button Content="Очистить" HorizontalAlignment="Left" Margin="362,99,0,0" VerticalAlignment="Top" Width="94" Click="Button_Click_3"/>

    </Grid>
</Window>
